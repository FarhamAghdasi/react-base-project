/* App.css */
body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.game-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: #1a1a1a;
}

.start-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 15px 30px;
  font-size: 1.5rem;
  cursor: pointer;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  transition: transform 0.2s;
}

.start-button:hover {
  transform: translate(-50%, -50%) scale(1.1);
}

.rocket {
  position: absolute;
  bottom: 10%;
  width: 10%;
  height: 50px;
  background-color: #ff5722;
  transition: left 0.1s;
  border-radius: 5px;
}

.obstacle {
  position: absolute;
  width: 10%;
  height: 50px;
  background-color: #4CAF50;
  border-radius: 5px;
}

.score {
  position: absolute;
  top: 20px;
  left: 20px;
  color: white;
  font-size: 2rem;
  z-index: 1;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.game-over {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.9);
  padding: 2rem;
  color: white;
  text-align: center;
  border-radius: 10px;
  border: 2px solid #4CAF50;
}

.game-over h2 {
  margin: 0 0 1rem 0;
}

.game-over button {
  margin-top: 1rem;
  padding: 10px 20px;
  font-size: 1.2rem;
  cursor: pointer;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
}
